<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/fra_re_yc_small_user_img"
        android:layout_width="@dimen/fra_re_yc_user_img"
        android:layout_height="@dimen/fra_re_yc_user_img"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fra_re_yc_img_bg_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fra_re_yc_small_user_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fra_re_yc_user_img"
            android:gravity="center_vertical"
            android:text="用户名"
            android:textColor="@color/fra_re_yc_user_text_color"
            android:textSize="@dimen/fra_re_yc_text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fra_re_yc_small_padding"
            android:background="@color/bg_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fra_re_yc_small_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_margin="@dimen/fra_re_yc_text_margin"
                android:textColor="@color/fra_re_yc_user_title_color"
                android:id="@+id/fra_re_yc_small_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fra_re_yc_small_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00-00"
                android:textSize="@dimen/fra_re_yc_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fra_re_yc_text_margin"
                android:text="评论"
                android:textSize="@dimen/fra_re_yc_text_size"/>

            <TextView
                android:id="@+id/fra_re_yc_small_speak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fra_re_yc_text_margin"
                android:text="0"
                android:textSize="@dimen/fra_re_yc_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fra_re_yc_text_margin"
                android:text="赞"
                android:textSize="@dimen/fra_re_yc_text_size"/>

            <TextView
                android:id="@+id/fra_re_yc_small_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/fra_re_yc_text_size"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>