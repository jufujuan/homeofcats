<?xml version="1.0" encoding="utf-8"?>
<!--登录-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ac_login_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="     "/>
    <ImageView
        android:id="@+id/ac_login_top_bg_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/login_top_bg"/>
</FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fra_login_margin"
        android:orientation="vertical">

        <jfj.homeofcars.View.AutoDeleteEditText
            android:background="@null"
            android:id="@+id/ac_login_user_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:hint="@string/ac_login_user_name"
            android:lines="1"/>

        <jfj.homeofcars.View.AutoDeleteEditText
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@null"
            android:id="@+id/ac_login_user_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ac_login_ueser_password"
            android:lines="1"/>

        <Button
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/ac_login_sure_btn_bg_default"
            android:id="@+id/ac_login_make_sure_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhiteText"
            android:text="@string/ac_login_make_sure"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/ac_login_register"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ac_login_forget_password"/>
        </LinearLayout>
    </LinearLayout>
    <!--第三方等登录-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fra_mine_item_bg_color">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fra_mine_item_margin_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fra_mine_login_height"
                android:layout_marginBottom="@dimen/fra_mine_item_margin_vertical"
                android:layout_marginTop="@dimen/fra_mine_item_margin_vertical"
                android:src="@mipmap/icon_weibo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="@dimen/fra_mine_login_height"
                android:layout_marginBottom="@dimen/fra_mine_item_margin_vertical"
                android:layout_marginTop="@dimen/fra_mine_item_margin_vertical"
                android:src="@mipmap/icon_qq"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fra_mine_login_height"
                android:layout_marginBottom="@dimen/fra_mine_item_margin_vertical"
                android:layout_marginTop="@dimen/fra_mine_item_margin_vertical"
                android:src="@mipmap/icon_wecat"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>